<!DOCTYPE html>
<html lang="en">
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12"><h1>My DashBoard</h1></div>
</div>

<div class="container-fluid">
 <div class="row">
  <div class="col-md-4">

    <ul class="list-group">
        <li class="list-group-item">
              <p>
                <strong>First name:</strong>
                <%= @employer.first_name %>
              </p>
        </li>
        <li class="list-group-item">
             <p>
                <strong>Last name:</strong>
                <%= @employer.last_name %>
            </p>
        </li>
        <li class="list-group-item">
             <p>
                <strong>Email:</strong>
                <%= @employer.email %>
             </p>
        </li>
        <li class="list-group-item">
              <p>
                <strong>Company:</strong>
                <%= @employer.company %>
              </p>
        </li>
        <li class="list-group-item">
              <p>
                <strong>Phone:</strong>
                <%= @employer.phone %>
              </p>
        </li>
        <li class="list-group-item">
         
              <%= link_to 'Edit', edit_employer_path(@employer) %> |
              <%= link_to 'Back', employers_path %>
        </li>
        
    </ul>
      
  </div>

  <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">My Job Positions</h3>
        </div>
        <div class="panel-body">
          <ul class="list-group">
            <li class="list-group-item">
              <span class="badge">14</span>
              <%= link_to "All Positions", positions_path%>
            </li>
            <li class="list-group-item">
              <span class="badge">2</span>
              Upcoming Positions
            </li>
            <li class="list-group-item">
              <span class="badge">15</span>
             <%= link_to "Positions Won", positions_path%>
            </li>
            <li class="list-group-item">
              <span class="badge">10</span>
              Completed Interviews
            </li>
          </ul>
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Create New Position</h3>
          </div>
              <div class="panel-body">
                 
                  <a href="/positions/new" align="right" class="btn btn-success">Create</a>
                  <p align="right"> Create your new position</p>
              </div>
          </div>
        </div>
      </div>
  </div>

  <div class="col-md-4">
      <div class="panel panel-warning">
        <div class="panel-heading">
          <h3 class="panel-title">My Interviews</h3>
        </div>
        <div class="panel-body">
          <ul class="list-group">
            <li class="list-group-item">
              <span class="badge">14</span>
              <%= link_to "All Interviews", interviews_path%>
            </li>
            <li class="list-group-item">
              <span class="badge">2</span>
              All Interviews
            </li>
            <li class="list-group-item">
              <span class="badge">15</span>
              Interview Feedback
            </li>
            <li class="list-group-item">
              <span class="badge">10</span>
              Completed Interviews
            </li>
          </ul>
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Create New Interview</h3>
          </div>
              <div class="panel-body">
                 <a href="/interviews/new" align="right" class="btn btn-success">Create</a>
                 <p align="right"> Create your new interview</p>

              </div>
          </div>
        </div>
      </div>
  </div>








  
  

      
  