<h1>Listing Positions</h1>

<table>
  <thead>
    <tr>
      <th>Department</th>
      <th>Contact</th>
      <th>Questions</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.department %></td>
        <td><%= position.contact %></td>
        <td><%= position.questions %></td>
        <td><%= position.status %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

